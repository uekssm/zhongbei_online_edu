<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.bb.ssm.mapper.UniversityInfoMapper" >
  <resultMap id="BaseResultMap" type="org.bb.ssm.model.University" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="num" property="num" jdbcType="VARCHAR" />
    <result column="summary" property="summary" jdbcType="VARCHAR" />
    
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, num, summary
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from uek_acdemic_university
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <!-- 分页SQL语句 -->  
	<select id="selectUniversitysByPage" resultMap="BaseResultMap">  
	  select   
	  *  
	  from uek_acdemic_university  limit #{startPos},#{pageSize}   
	</select>  
	<!-- 取得记录的总数 -->  
	<select id="getUniversitysCount" resultType="long">  
	  SELECT COUNT(*) FROM uek_acdemic_university where name like CONCAT('%', #{searchname}, '%')  
	</select>  

  
  <select id="findAll" resultMap="BaseResultMap">
  	SELECT * FROM uek_acdemic_university
  			where name like CONCAT('%', #{searchname}, '%')  
  	 limit #{pageIndex},#{limit}
  		<!-- <if test="name != null">
  			where name like'%#{name,jdbcType=VARCHAR}%'
  		</if> -->
  		
  </select>
  <!-- ( #{ids}) -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from uek_acdemic_university
    where id in
    <foreach item="idItem" collection="ids" open="(" separator="," close=")">  
        #{idItem}  
    </foreach> 
  </delete>
  <insert id="insert" parameterType="org.bb.ssm.model.University" >
    insert into uek_acdemic_university (name, summary, 
      num)
    values (#{name,jdbcType=VARCHAR}, #{summary,jdbcType=VARCHAR}, 
      #{num,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="org.bb.ssm.model.University" >
